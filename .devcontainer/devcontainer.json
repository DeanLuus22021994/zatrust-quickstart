{
  "name": "zatrust-quickstart",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "dev",
  "workspaceFolder": "/workspaces/zatrust-quickstart",
  "overrideCommand": false,
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "eslint.format.enable": true,
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact"
        ],
        "typescript.tsdk": "./node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        // Force VS Code to use the workspace TS only (avoids mixed/bundled TS mismatch crashes)
        "typescript.tsserver.useSyntaxServer": "never",
        // Increase memory ceiling in case large dependency graph was triggering OOM & crash
        "typescript.tsserver.maxTsServerMemory": 4096,
        // Helpful when diagnosing future crashes; set to "off" after stable
        "typescript.tsserver.log": "off",
        // Avoid excessive project diagnostic work during startup (stability)
        "typescript.tsserver.experimental.enableProjectDiagnostics": false
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-playwright.playwright",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  "containerEnv": {
    "GITHUB_REPOSITORY": "DeanLuus22021994/zatrust-quickstart",
    "GH_RUNNER_LABELS": "self-hosted,devcontainer,linux,x64",
    "ENABLE_GH_RUNNER": "true"
  },
  "postCreateCommand": "bash .devcontainer/scripts/provision.sh",
  "postStartCommand": "bash -lc 'if [ ! -f .next/BUILD_ID ]; then echo [postStart] Starting dev server; npm run dev >/tmp/dev.log 2>&1 & else echo [postStart] Reusing existing build; fi'",
  "forwardPorts": [3000, 9323],
  "remoteEnv": {
    "WEB_PORT": "3000",
    "PWDEBUG_PORT": "9323"
  },
  "remoteUser": "node"
}
