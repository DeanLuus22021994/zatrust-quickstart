{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    "group:monorepos",
    "group:test"
  ],
  "timezone": "UTC",
  "schedule": ["before 5am on monday"],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"],
    "automerge": true,
    "automergeType": "pr"
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^react$", "^react-dom$", "^next$"],
      "groupName": "react-next-major",
      "matchUpdateTypes": ["major"],
      "stabilityDays": 3,
      "prCreation": "not-pending",
      "dependencyDashboardApproval": true,
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^eslint$",
        "^eslint-config-next$",
        "^@typescript-eslint/"
      ],
      "groupName": "eslint-stack",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^@playwright/test$"],
      "groupName": "playwright-stack",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "stabilityDays": 1
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupName": "dev-deps-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "labels": ["dependencies", "renovate"],
  "semanticCommits": "enabled",
  "ignorePaths": ["**/test-results/**"],
  "rollbackPrs": true,
  "rollbackPrsLimit": 3,
  "onboarding": false,
  "assignees": ["github-actions[bot]"],
  "reviewers": [],
  "commitBody": "Generated by Renovate. See repository .github/copilot-instructions.md and .prompt.yml for automation context."
}
